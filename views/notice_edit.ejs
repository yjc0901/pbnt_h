<!doctype html>
<html lang="ko">
<%- include('./include/head.ejs') %>
<script src="/resources/js/jquery-1.8.3.min.js"></script>
<script src="/resources/js/jquery-ui.js"></script>
<script src="/resources/js/jquery.easing.min.js"></script>
<script src="/resources/js/topmenu_script.js"></script>
<script src="/resources/js/aos.js"></script>
<script src="/resources/js/feather.min.js"></script>
<link rel="stylesheet" href="/resources/css/aos.css">
<link rel="stylesheet" href="/resources/css/sh_common.css"> 
<link rel="stylesheet" href="/resources/css/sh_sub.css">     
<link rel="stylesheet" href="/resources/css/style.css">     

<body>

<!-- sh_wrapper [s] -->
<div id="sh_wrapper">

    <!-- sh_hd [s] -->
    <%- include('./include/sidebar.ejs') %>
    <!-- sh_hd [e] -->
    
    <!-- sh_container [s] -->
    <main id="sh_container">
        <!-- shSubBnr [s] -->
        <div id="subBnr">
            <div class="txt_area">
                공지사항        
                <span>고객지원</span>
            </div>
        </div> 
        <script>
            $('#subBnr .txt_area').stop().delay(0).animate({"opacity":"1","padding-top":"0"},400);
        </script>
        <!-- shSubBnr [e] -->

        <div id="sh_container_wrapper">
            <!-- sh_aside [s] -->
            <div id="sh_aside">
                <div id="sh_aside_wrapper">
                    <ul id="sh_snb">
                        <li class="snb_on">
                            <a href="/notice">공지사항</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- sh_aside [e] -->
            
            <!-- 본문 영역 -->
            <div id="sh_content">
                <div class="notice-write">
                    <form action="/notice/edit/<%= notice.id %>" method="POST">
                        <div class="form-group">
                            <label for="title">제목</label>
                            <input type="text" id="title" name="title" value="<%= notice.title %>" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="content">내용</label>
                            <textarea id="content" name="content" required><%= notice.content %></textarea>
                        </div>
                        
                        <div class="button-group">
                            <button type="submit" class="btn-submit">수정</button>
                            <a href="/notice/<%= notice.id %>" class="btn-cancel">취소</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!-- sh_container [e] -->
    
    <%- include('./include/footer.ejs') %>

<!-- sh_wrapper [e] -->
</div>

<script>
	feather.replace();
    AOS.init();
</script>

</body>
</html>

